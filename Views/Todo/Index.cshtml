@model List<TodoItem>;

@{
    ViewData["Title"] = "Todo Items Page";
}

<h1>@ViewData["Title"]</h1>

<p>List of Todo</p>


<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.DueDate</td>
                    <td>
                        @if (SignInManager.IsSignedIn(User))
                        {
                        <a asp-controller="Todo" asp-action="SingleItem" asp-route-id="@item.Id">
                            <button>See Detail</button>
                        </a>    
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>